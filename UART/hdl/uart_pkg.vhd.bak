package uart_pkg is

type BAUD is (9600, 57600, 115200);

-- this function retrieves the integer value for the divisor
-- clk frequency is known to be 50MHz
function baudrateDivisor (rate : BAUD)
				return integer is
begin
	if rate=9600 then
		return 5208;
	elsif rate=57600 then
		return 868;
	else -- 115200
		return 434;
	end if;
end baudrateDivisor;
end uart_pkg;